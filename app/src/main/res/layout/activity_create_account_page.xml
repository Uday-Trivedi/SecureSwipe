<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:paddingTop="20dp"
    android:paddingRight="40dp"
    android:paddingLeft="40dp"
    android:backgroundTint="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".CreateAccountPage">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text1_createpage"
        android:fontFamily="@font/manrope_bold"
        android:text="Create Account"
        android:layout_marginTop="20dp"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/text2_createpage"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1_createpage"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="Enter Name"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edittext1_createpage"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittext_bg"
        android:hint="Name"
        android:padding="12dp"
        android:layout_below="@+id/text2_createpage"
        android:layout_marginTop="10dp"
        android:textColor="#616E8A"
        android:textColorHint="#616E8A"/>


    <TextView
        android:id="@+id/text3_createpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/edittext1_createpage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="Enter Email"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edittext2_createpage"
        android:layout_width="match_parent"
        android:layout_height="55dp"

        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="Email"
        android:padding="12dp"
        android:layout_below="@+id/text3_createpage"
        android:layout_marginTop="10dp"
        android:textColor="#616E8A"
        android:textColorHint="#616E8A"/>


    <TextView
        android:id="@+id/text4_createpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/edittext2_createpage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="Enter Password"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edittext3_createpage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:background="@drawable/edittext_bg"
        android:hint="Password"
        android:padding="12dp"
        android:inputType="textPassword"
        android:layout_below="@+id/text4_createpage"
        android:layout_marginTop="10dp"
        android:textColor="#616E8A"
        android:textColorHint="#616E8A"/>

    <TextView
        android:id="@+id/text5_createpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext3_createpage"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:fontFamily="@font/manrope_semibold"
        android:text="Enter Password"
        android:textSize="16dp" />

    <Spinner
        android:id="@+id/spinner_createpage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_bg"
        android:padding="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"

        android:layout_below="@+id/text5_createpage"
        android:theme="@style/SpinnerStyle"
        android:layout_marginBottom="16dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#1C5EF2"
        android:id="@+id/cardview1_createpage"
        android:layout_below="@id/spinner_createpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="Create"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />






        </RelativeLayout>



    </androidx.cardview.widget.CardView>











</RelativeLayout>