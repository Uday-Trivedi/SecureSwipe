<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="10dp"
    android:backgroundTint="#FFFFFF"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/text1_loginpage"
        android:fontFamily="@font/manrope_bold"
        android:text="SecureSwipe"
        android:layout_marginTop="20dp"
        android:textSize="22dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text2_loginpage"
        android:layout_centerHorizontal="true"
        android:textSize="17dp"
        android:text="AI-Protected Payments"
        android:layout_below="@+id/text1_loginpage"
        android:textColor="#616E8A"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/text3_loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text2_loginpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/manrope_bold"
        android:text="Welcome back to SecurePay"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/text4_loginpage"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text3_loginpage"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="Enter User ID"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edittext1_loginpage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/edittext_bg"
        android:hint="User ID"
        android:padding="12dp"
        android:layout_below="@+id/text4_loginpage"
        android:layout_marginTop="10dp"
        android:textColor="#616E8A"
        android:textColorHint="#616E8A"/>





    <TextView
        android:id="@+id/text5_loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edittext1_loginpage"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/manrope_semibold"
        android:text="Enter Password"
        android:layout_marginLeft="20dp"
        android:textSize="16dp" />


    <EditText
        android:id="@+id/edittext2_loginpage"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@drawable/edittext_bg"
        android:inputType="textPassword"
        android:hint="Password"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="12dp"
        android:layout_below="@+id/text5_loginpage"
        android:layout_marginTop="10dp"
        android:textColor="#616E8A"
        android:textColorHint="#616E8A"/>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="50dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="#1C5EF2"
        android:id="@+id/cardview1_loginpage"
        android:layout_below="@id/edittext2_loginpage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="Login"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />






        </RelativeLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text6_loginpage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/manrope_semibold"
        android:layout_marginLeft="10dp"
        android:text="New to SecureSwipe?"
        android:textSize="16dp" />


    <androidx.cardview.widget.CardView
        android:layout_width="170dp"
        android:layout_height="40dp"
        app:cardCornerRadius="15dp"
        android:layout_marginBottom="20dp"
        app:cardBackgroundColor="#1C5EF2"
        android:id="@+id/cardview2_loginpage"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/manrope_bold"
                android:text="Create Account"
                android:layout_centerInParent="true"
                android:textColor="#FFFFFF"
                android:textSize="15dp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>




















</RelativeLayout>